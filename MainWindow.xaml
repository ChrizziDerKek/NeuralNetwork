<Window x:Class="NeuralNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Background="Gray"
        Title="Neural Network OCR" Height="400" Width="300">
    <Window.Resources>
        <Style x:Key="NoHover" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="1" BorderBrush="DarkGray" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width=".3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".3*"/>
        </Grid.RowDefinitions>
        <Grid Name="gPixels" Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Name="b0_0" Grid.Column="0" Grid.Row="0" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b0_1" Grid.Column="0" Grid.Row="1" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b0_2" Grid.Column="0" Grid.Row="2" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b0_3" Grid.Column="0" Grid.Row="3" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b0_4" Grid.Column="0" Grid.Row="4" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b0_5" Grid.Column="0" Grid.Row="5" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b0_6" Grid.Column="0" Grid.Row="6" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_0" Grid.Column="1" Grid.Row="0" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_1" Grid.Column="1" Grid.Row="1" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_2" Grid.Column="1" Grid.Row="2" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_3" Grid.Column="1" Grid.Row="3" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_4" Grid.Column="1" Grid.Row="4" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_5" Grid.Column="1" Grid.Row="5" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b1_6" Grid.Column="1" Grid.Row="6" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_0" Grid.Column="2" Grid.Row="0" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_1" Grid.Column="2" Grid.Row="1" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_2" Grid.Column="2" Grid.Row="2" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_3" Grid.Column="2" Grid.Row="3" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_4" Grid.Column="2" Grid.Row="4" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_5" Grid.Column="2" Grid.Row="5" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b2_6" Grid.Column="2" Grid.Row="6" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_0" Grid.Column="3" Grid.Row="0" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_1" Grid.Column="3" Grid.Row="1" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_2" Grid.Column="3" Grid.Row="2" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_3" Grid.Column="3" Grid.Row="3" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_4" Grid.Column="3" Grid.Row="4" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_5" Grid.Column="3" Grid.Row="5" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b3_6" Grid.Column="3" Grid.Row="6" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_0" Grid.Column="4" Grid.Row="0" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_1" Grid.Column="4" Grid.Row="1" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_2" Grid.Column="4" Grid.Row="2" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_3" Grid.Column="4" Grid.Row="3" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_4" Grid.Column="4" Grid.Row="4" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_5" Grid.Column="4" Grid.Row="5" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
            <Button Name="b4_6" Grid.Column="4" Grid.Row="6" Content=" " FontSize="999" Background="White" Click="Button_Click" Style="{StaticResource NoHover}"/>
        </Grid>
        <Button Name="bRecognize" Grid.Column="1" Grid.Row="3" Content="Recognize" BorderThickness="1" BorderBrush="DarkGray" Click="Button_Click"/>
        <TextBox Name="tbResult" Grid.Column="1" Grid.Row="4" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button Name="bLearn" Grid.Column="1" Grid.Row="5" Content="Learn" BorderThickness="1" BorderBrush="DarkGray" Click="Button_Click"/>
        <TextBox Name="tbLearned" Grid.Column="1" Grid.Row="6" IsReadOnly="True" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>